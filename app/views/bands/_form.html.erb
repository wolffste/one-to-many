  <div class="start-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1508854710579-5cecc3a9ff17?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80)">
    <div class="text-center">
        <h1 class="higlighted"> Sign up </h1>
    </div>
  </div>

<div class="container">
  <div class="row  d-flex justify-content-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 form-login">

      <%= simple_form_for @band do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.association :genre, input_html: { class: "beautiful-dropdown" }, include_hidden: false, class: "form-group"  %>
          <%= f.association :instrument, input_html: { class: "beautiful-dropdown" }, include_hidden: false, class: "form-group"  %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.input :videolink, label: "Please add a link to a Youtube-Video of your band." %>
          <%= f.input :soundcloudlink, label: "Please add a link to your Soundcloud-Playlist." %>
        </div>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
