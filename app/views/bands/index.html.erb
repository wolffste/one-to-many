<div class="main bg-image" style="background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.43), rgba(255, 255, 255, 0.96), rgb(255, 255, 255)), url('<%= cl_image_path("banner-otm_tuakfl", :height=>800, :width=>1440) %>');">
    <div class="text-center">
      <% if params[:search].present? == false || params[:search][:genre] == "" && params[:search][:instrument] == "" %>
      <h1>Hi, check out these <span class="higlighted"> <%= @bands.count %> </span> bands!</h1>
      <% else %>
      <h1>We found some cool bands for you!</h1>
      <% end %>
    </div>
  </div>

<div class="container">
  <div class="cards">

    <% @bands.each do |band| %>



    <div class="musician-card">
      <%= link_to "edit", edit_band_path(band) %>
      <% if band.photos.attached? %>
        <%= link_to band_path(band), :action => 'go' do %>
          <div class="musician-pic" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path band.photos[0].key, height: 230, crop: :fill %>')"></div>
        <% end %>
        <% else %>
          <%= link_to band_path(band), :action => 'go' do %>
          <div class="musician-pic" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path("a6fac407-95ce-4d45-b360-8330205ce210_l_svdjab", :height=>230, :gravity=>"west", :crop=>"fill") %>')"></div>
        <% end %>
      <% end %>

      <div class="card-row">
        <p>name:</p>
        <p><%= band.name %></p>
      </div>
      <hr class="no-margin">
      <div class="card-row">
        <p>genre:</p>
        <p><%= band.genre.name %></p>
      </div>
      <hr class="no-margin">
      <div class="card-row">
        <p>need sub for:</p>
        <p>drums</p>
      </div>
      <hr class="no-margin">
      <div class="card-row">
        <p>period:</p>
        <p>July 2020</p>
      </div>
    </div>


      <% end %>

    </div>
  </div>
</div>


